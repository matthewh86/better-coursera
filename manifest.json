{
  "manifest_version": 2,

  "name": "Better Coursera",
  "version": "1.0.0",
  "description": "Usable(!) Layout for Coursera",

  "background" : {
    "scripts" : ["background.js"]
  },

  "permissions" : [
    "https://www.coursera.org/*",
    "http://www.coursera.org/*",
    "tabs",
    "activeTab",
    "webNavigation"
  ],

  "browser_action": {
    "default_title": "Alter Coursera Layout"
  },

  "content_scripts": [{
    "css": ["styles.css"],
    "js": ["domchange.js", "functions.js"],
    "matches": ["https://www.coursera.org/*"]
  }],

  "icons": { "16": "16.png",
          "128": "128.png" }

}
